---
layout: layouts/base.njk
title: Notebook
---
<section class="notes">
  <ul class="note-list">
    {% for note in notebook.notes %}
      <li class="note" data-tags="{{ note.tags | join(',') }}">
        <span class="note-date">{{ note.date | shortDate }}</span>
        <span class="note-title">
          <a href=".{{ note.path }}">{{ note.title }}</a>
        </span>
      </li>
    {% endfor %}
  </ul>
</section>

<script src="{{ pathPrefix }}/js/filterNotes.js"></script>
<script src="{{ pathPrefix }}/js/highlightTag.js?=1"></script>
